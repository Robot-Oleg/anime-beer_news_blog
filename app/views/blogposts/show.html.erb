<% if user_signed_in? || @blogpost.all_can_see? %>
  <h1><%= @blogpost.title %></h1>
  <p><%= @blogpost.description %></p>
  <%= @blogpost.text.html_safe %>
<% else %>
  <h1><%= @blogpost.title if @blogpost.only_title? || @blogpost.only_title_and_description? %></h1>
  <p><%= @blogpost.description if @blogpost.only_title_and_description? %></p>
  <%= link_to 'Sign in', new_user_registration_path %>
<% end %>
