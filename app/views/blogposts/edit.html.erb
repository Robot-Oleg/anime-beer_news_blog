<% if current_user.editor? || current_user.admin? %>
    <%= react_component("BlogpostEditor", { url: "/blogposts/#{@blogpost.id}",
                                        enableCategory: true,
                                        enableTags: true,
                                        title: @blogpost.title,
                                        description: @blogpost.description,
                                        text: @blogpost.text,
                                        }) %>
<% else %>
    <%= react_component("BlogpostEditor", { url: "/blogposts/#{@blogpost.id}",
                                        title: @blogpost.title,
                                        description: @blogpost.description,
                                        text: @blogpost.text,
                                        }) %>
<% end %>